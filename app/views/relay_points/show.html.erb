<div class="container">
      <div class="card-relay-point">
        <div class="card-image">
          <img src=<%= @relay_point.image_shopify %> />
        </div>
      </div>
      <div class="card-content">
        <h2><%= @relay_point.name %></h2>
        <p><%= @relay_point.hours %></p>
        <p><%= @relay_point.address %></p>
        <p><%= @relay_point.commune %></p>
        <p><%= @relay_point.phone_number %></p>
        <%= link_to '', relay_point_path(@relay_point), class: "btn btn-primary" %>
        <%= link_to "Delete #{@relay_point.name}",
            relay_point_path(@relay_point),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </div>
</div>
