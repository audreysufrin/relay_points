<div class="background-form">

  <div class= "text-center" >
    <h1> <strong>Liste des jours fériés</strong> </h1>
    <h2> <strong> La prochaine livraison est le :</strong> <%= @next_delivery.strftime("%d/%m/%Y") %></h2>
  </div>
    <div class= "col-12 col-md-8 col-lg-5 offset-md-2 offset-lg-6">
    <%= link_to "Créer un jour", new_day_off_path, class: "btn btn-success" %>
    </div>

  <ol style="list-style-type: decimal" class= "list-days-off text-center">
    <% @day_offs.each do |day_off| %>
      <li class= "list-date"><%= day_off.day_off_date.strftime("%d/%m/%Y") %>
        <%= link_to "Supprimer",
              day_off_path(day_off), class: "btn btn-danger m-2",
              method: :delete,
              data: { confirm: "Etes-vous sûr?" } %>
      </li>
    <% end %>
  </ol>
</div>
